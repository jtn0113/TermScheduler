<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.termscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TermScheduler">
        <activity
            android:name=".UI.AssessmentDetail"
            android:label="Assessment Detail"
            android:exported="false" />
        <activity
            android:name=".UI.AssessmentAdd"
            android:label="Assessment Add"
            android:exported="false" />
        <activity
            android:name=".UI.CourseDetail"
            android:label="Course Detail"
            android:exported="false" />
        <activity
            android:name=".UI.CourseAdd"
            android:label="Course Add"
            android:exported="false" />
        <activity
            android:name=".UI.TermAdd"
            android:label="Term Add"
            android:exported="false" />
        <activity
            android:name=".UI.TermDetail"
            android:label="Term Detail"
            android:exported="false" />
        <activity
            android:name=".UI.AssessmentList"
            android:parentActivityName=".UI.MainActivity"
            android:label="Assessment List"
            android:exported="false" />
        <activity
            android:name=".UI.CourseList"
            android:parentActivityName=".UI.MainActivity"
            android:label="Course List"
            android:exported="false" />
        <activity
            android:name=".UI.TermList"
            android:parentActivityName=".UI.MainActivity"
            android:label="Term List"
            android:exported="false" />
        <activity
            android:name=".UI.MainActivity"
            android:label="Welcome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>